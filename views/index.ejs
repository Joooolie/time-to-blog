<%- include("partials/header.ejs") %>

<form action="/new-post" method="GET">
    <input type="submit" value="Make a new post" class="btn btn-primary btn-lg px-4 gap-3">
</form>

<%var index = 0;%>
<% if (locals.allPosts && locals.allPosts.length > 0) { %>
    <h2>Recent Posts</h2>
    <%locals.allPosts.forEach((post, i) => { %>
        <div>
            <h3>
                <%= post.title %> 
            </h3>
            <p>
                <%= post.content %>
            </p>
            <a href="/edit?postid=<%= i%>" class="btn btn-primary btn-lg px-4 gap-3">Edit</a> 
            <a href="/delete?postid=<%= i%>" class="btn btn-primary btn-lg px-4 gap-3">Delete</a> 
        </div>
        
        
    <% }); %>
<% } %>

<%- include("partials/footer.ejs") %>