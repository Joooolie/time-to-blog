<%- include("partials/header.ejs") %>

<form action="/new-post" method="GET">
    <input type="submit" value="Make a new post">
</form>

<h2>Recent Posts</h2>
<% if (locals.allPosts) { %>
    <%allPosts.forEach(post => { %>
        <h3>
            <%= post.title %> 
        </h3>
        <p>
            <%= post.content %>
        </p>
        
    <% }); %>
<% } %>
<%- include("partials/footer.ejs") %>